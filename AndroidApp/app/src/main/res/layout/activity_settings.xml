        android:layout_marginLeft="20dp"
        android:layout_marginTop="460dp"
        android:text="Скорость ветра [м/с]"
        android:textColor="@color/purple_700"
        android:textSize="20sp" />

    <CheckBox
        android:id="@+id/checkBox_WIND_SPEED"
